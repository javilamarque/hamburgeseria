
{{> header}}

<div class="background"></div>
<div class="card">
    <img src="image/burger.png" alt="burger" class="logo">
    <h2>Bienvenido a Burger Ariel</h2>
    <form class="form" action="/login" method="post">
        <label for="username"></label>
        <input id="username" name="username" type="text" placeholder="Ingrese su Alias" required>
        <!-- Utiliza una etiqueta <label> para describir el campo de usuario -->

        <label for="password"></label>
        <input id="password" name="password" type="password" placeholder="Ingrese su Contraseña" required>
        <!-- Utiliza una etiqueta <label> para describir el campo de contraseña -->

        <button type="submit">Entrar</button>
    </form>
</div>

<script>
    // Obtener el mensaje de alerta pasado desde el router
    const alertMessage = "{{ alertMessage }}";

    // Mostrar el mensaje de alerta si existe
    if (alertMessage) {
        alert(alertMessage);
    }
</script>

