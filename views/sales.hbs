<script>

    $(document).on('click', '.seleccionar-producto', function () {
        let cod_barra = $(this).data('cod_barra');
        let descripcion = $(this).data('descripcion');
        let precio = $(this).data('precio');
        let cantidad = 1; // Puedes permitir que el usuario ingrese la cantidad si lo prefieres
        let total = cantidad * precio;

        // Actualizar los campos ocultos con los detalles del producto seleccionado
        $('#cantidad').val(cantidad);
        $('#codigo').val(cod_barra);
        $('#descripcion').val(descripcion);
        $('#precio').val(precio);
        $('#total').val(total);


    });

    $(document).ready(function () {
        // Función para abrir el modal y cargar los productos
        function abrirModal() {
            $.get('/sales/products', function (products) {
                $('#productList').empty();
                products.forEach(function (product) {
                    let row = `
                        <tr>
                            <td>${product.cod_barra}</td>
                            <td>${product.descripcion}</td>
                            <td>${product.precio_venta}</td>
                            <td>${product.stock}</td>
                            <td>
                                <button type="button" class="btn btn-primary seleccionar-producto" 
                                    data-cod_barra="${product.cod_barra}" 
                                    data-descripcion="${product.descripcion}" 
                                    data-precio="${product.precio_venta}">
                                    Seleccionar
                                </button>
                            </td>
                        </tr>
                    `;
                    $('#productList').append(row);
                });
                $('#productModal').modal('show');
            })
                .fail(function () {
                    alert('Error al cargar los productos');
                });
        }

        // Escuchar el clic en el botón "Buscar" para abrir el modal
        $('#buscar-btn').click(function () {
            abrirModal();
        });

        // Escuchar el clic en los botones "Seleccionar" dentro del modal
        $(document).on('click', '.seleccionar-producto', function () {
            let cod_barra = $(this).data('cod_barra');
            let descripcion = $(this).data('descripcion');
            let precio = $(this).data('precio');
            let tbody = $('#productosEncontrados');
            let row = `
                <tr data-cod_barra="${cod_barra}">
                    <td class="cantidad">1</td>
                    <td>${cod_barra}</td>
                    <td>${descripcion}</td>
                    <td class="precio">${precio}</td>
                    <td class="total">${precio}</td>
                    <td><button type="button" onclick="editarCantidad('${cod_barra}')" class="btn btn-primary">Editar</button></td>
                    <td><button type="button" onclick="borrarArticulo(this)" class="btn btn-danger">Borrar</button></td>
                </tr>
            `;
            tbody.append(row);
            $('#productModal').modal('hide');
            actualizarTotal(); // Actualizar el total al añadir el producto
        });

        // Función para editar la cantidad de un producto
        window.editarCantidad = function (cod_barra) {
            let cantidad = prompt('Ingrese la nueva cantidad:');
            if (cantidad !== null && cantidad > 0) {
                let row = $(`tr[data-cod_barra='${cod_barra}']`);
                let precio = parseFloat(row.find('.precio').text());
                row.find('.cantidad').text(cantidad);
                row.find('.total').text(precio * cantidad);
                actualizarTotal(); // Actualizar el total al editar la cantidad
            }
        }

        // Función para borrar un producto de la tabla
        window.borrarArticulo = function (button) {
            let row = button.closest('tr');
            row.remove();
            actualizarTotal(); // Actualizar el total al borrar el producto
        }

        // Función para actualizar el total a cobrar
        function actualizarTotal() {
            let totalCobrarElement = $('#totalCobrar');
            let total = 0;
            $('#productosEncontrados tr').each(function () {
                let cantidad = parseFloat($(this).find('.cantidad').text());
                let precio = parseFloat($(this).find('.precio').text());
                total += cantidad * precio;
            });
            totalCobrarElement.text(total.toFixed(2));
        }
    });
</script>
