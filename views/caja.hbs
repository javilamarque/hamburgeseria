{{>header}}

<div class="container">
    <h1 class="mt-5">Caja</h1>

    <div class="row mt-4">
        <h3>Estado de la Caja Abierta</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Apertura</th>
                    <th>Ventas Transferencia</th>
                    <th>Ventas Efectivo</th>
                    <th>Retiro Efectivo</th>
                    <th>Retiro Transferencia</th>
                    <th>Total Transferencia</th>
                    <th>Total Dinero en Caja</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>${{caja.abierta.apertura}}</td> <!-- Aquí estás usando caja.abierta -->
                    <td>${{caja.abierta.t_transferencia}}</td> <!-- Aquí estás usando caja.abierta -->
                    <td>${{caja.abierta.total_ventas_dia}}</td> <!-- Aquí estás usando caja.abierta -->
                    <td>${{caja.abierta.cierre_parcial_efectivo}}</td> <!-- Aquí estás usando caja.abierta -->
                    <td>${{caja.abierta.retiro_parcial_transferencia}}</td> <!-- Aquí estás usando caja.abierta -->
                    <td>${{caja.abierta.total_transferencia}}</td> <!-- Aquí estás usando caja.abierta -->
                    <td>${{caja.abierta.total_dinero_en_caja}}</td> <!-- Aquí estás usando caja.abierta -->
                </tr>
            </tbody>
        </table>
    </div>

    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#cierreParcialModal" {{#unless
        (eq userRole 'admin' )}}disabled class="disabled" {{/unless}}>
        Retiro Parcial Efectivo
    </button>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#retiroTransferenciaModal"
        {{#unless (eq userRole 'admin' )}}disabled class="disabled" {{/unless}}>
        Retiro Parcial Transferencia
    </button>

    <button type="button" class="btn btn-danger" id="cerrarCajaBtn" {{#unless (eq userRole 'admin' )}}disabled
        class="disabled" {{/unless}}>Cerrar Caja</button>

    {{#if caja.cerrada}}
    <div class="row mt-4">
        <h3>Estado de la Caja Cerrada</h3>
        <table class="table disabled">
            <thead>
                <tr>
                    <th>Apertura</th>
                    <th>Ventas Transferencia</th>
                    <th>Ventas Efectivo</th>
                    <th>Retiro Efectivo</th>
                    <th>Retiro Transferencia</th>
                    <th>Total Transferencia</th>
                    <th>Total Dinero en Caja</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>${{caja.cerrada.apertura}}</td> 
                    <td>${{caja.cerrada.t_transferencia}}</td> 
                    <td>${{caja.cerrada.total_ventas_dia}}</td> 
                    <td>${{caja.cerrada.cierre_parcial_efectivo}}</td> 
                    <td>${{caja.cerrada.retiro_parcial_transferencia}}</td> 
                    <td>${{caja.cerrada.total_transferencia}}</td> 
                    <td>${{caja.cerrada.total_dinero_en_caja}}</td> 
                </tr>
            </tbody>
        </table>
    </div>
    {{/if}}

    <div class="modal fade" id="cierreParcialModal" tabindex="-1" aria-labelledby="cierreParcialModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <form id="cierreParcialForm">
                        <div class="mb-3">
                            <label for="cierre_parcial" class="form-label">Cierre Parcial</label>
                            <input type="number" class="form-control" id="cierre_parcial" name="cierre_parcial"
                                required>
                        </div>
                        <button type="submit" class="btn btn-primary">Procesar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="retiroTransferenciaModal" tabindex="-1" aria-labelledby="retiroTransferenciaModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <form id="retiroTransferenciaForm">
                        <div class="mb-3">
                            <label for="retiro_transferencia" class="form-label">Retiro Parcial Transferencia</label>
                            <input type="number" class="form-control" id="retiro_transferencia"
                                name="retiro_transferencia" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Procesar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<button type="button" class="btn btn-danger" id="cancel-btn">Ir a Inicio</button>

<style>
    .disabled {
        pointer-events: none;
        opacity: 0.6;
    }
</style>

<script>
    document.getElementById('cancel-btn').addEventListener('click', function () {
        window.history.back();
    });

    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('cierreParcialForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const cierreParcial = document.getElementById('cierre_parcial').value;

            const formData = {
                cierre_parcial: cierreParcial
            };

            const response = await fetch('/procesarCierreParcial', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            if (response.ok) {
                alert('Cierre parcial procesado correctamente.');
                location.reload();
            } else {
                alert('Error al procesar el cierre parcial.');
            }
        });

        document.getElementById('retiroTransferenciaForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const retiroTransferencia = document.getElementById('retiro_transferencia').value;

            const formData = {
                retiro_transferencia: retiroTransferencia
            };

            const response = await fetch('/procesarRetiroTransferencia', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            if (response.ok) {
                alert('Retiro parcial transferencia procesado correctamente.');
                location.reload();
            } else {
                alert('Error al procesar el retiro parcial transferencia.');
            }
        });

        document.getElementById('cerrarCajaBtn').addEventListener('click', async function () {
            const response = await fetch('/cerrarCaja', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                alert('Caja cerrada correctamente.');
                location.reload();
            } else {
                alert('Error al cerrar la caja.');
            }
        });
    });
</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{{>footer}}