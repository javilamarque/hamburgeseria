{{>header}}


<div class="container">
    <h1 class="mt-5">Caja</h1>

    <div class="row mt-4">
        <h3>Estado de la Caja</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Apertura</th>
                    <th>Total Transferencia</th>
                    <th>Ventas Efectivo</th>
                    <th>Retiro Parcial</th>
                    <th>Total Dinero en Caja</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>${{caja.apertura}}</td>
                    <td>${{caja.t_transferencia}}</td>
                    <td>${{caja.total_ventas_dia}}</td>
                    <td>${{caja.cierre_parcial}}</td>
                    <td>${{caja.total_final}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cierreParcialModal">
        Retiro Parcial
    </button>

    <div class="modal fade" id="cierreParcialModal" tabindex="-1" aria-labelledby="cierreParcialModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                {{!-- <div class="modal-header">
                    <h5 class="modal-title" id="cierreParcialModalLabel">Cierre Parcial</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div> --}}
                <div class="modal-body">
                    <form id="cierreParcialForm">
                        <div class="mb-3">
                            <label for="cierre_parcial" class="form-label">Cierre Parcial</label>
                            <input type="number" class="form-control" id="cierre_parcial" name="cierre_parcial"
                                required>
                        </div>
                        <button type="submit" class="btn btn-primary">Procesar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<button type="button" class="btn btn-danger" id="cancel-btn">Ir a Inicio</button>

{{!------------------------------------------------ BOTON DE CANCELAR ---------------------}}
<script>
    document.getElementById('cancel-btn').addEventListener('click', function () {
        window.history.back();
    });
</script>

{{!------------------------------------------------ SCRIPT DE CIERRE PARCIAL ---------------------}}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('cierreParcialForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const cierreParcial = document.getElementById('cierre_parcial').value;

            const formData = {
                cierre_parcial: cierreParcial
            };

            const response = await fetch('/procesarCierreParcial', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            if (response.ok) {
                alert('Cierre parcial procesado correctamente.');
                location.reload();
            } else {
                alert('Error al procesar el cierre parcial.');
            }
        });
    });
</script>



